<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h2><%= article.title %></h2>

    <img class="img-fluid" src="<%= article.image.url %>" width="400" /><br />
    <small
      ><%= article.category %> | <%= article.timestamp.toDateString() %></small
    >
    <br><hr>
    <p><%= article.content %></p>
    <p>By <%= article.author.name %></p>
  </div>
</div>
